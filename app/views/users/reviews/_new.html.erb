<div>
  <% if user_signed_in? %>
    <%= form_with model: [:users, shop, review], data: {remote: false} do |f| %>
      <div class="row">
        <div class="field col-md-12">
          <h4><%= f.label :タイトル %>:
          <%= f.text_field :title, class: "col-xs-5 item_title" %></h4>
        </div>
        <div class="col-md-12">
          <h4><%= f.label :内容 %>:</h4>
          <p><%= f.text_area :body, rows:'5', class: "form-control",placeholder: "ここに入力してください" %></p>
        </div class="review-star">
  <!-- 評価 -->
      </div>
      <div class="form-group col-md-12" id="star">
        <%= f.label :star,'評価 ', class:'col-form-label' %>
        <%= f.hidden_field :star, id: :review_star %>
      </div>
      <%= f.submit "レビューを送信", class: "btn btn-primary btn-lg btn-base-1 mt-20 pull-right" %>
    <% end %>
  <% end %>
</div>


  <!-- 評価javascript -->
  <script>
  $('#star').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    scoreName: 'review[star]',
    half: true,
  });
  </script>