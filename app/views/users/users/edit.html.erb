<%= form_with model: @user ,url: users_user_path(current_user), local: true do |f| %>
  <h4>お名前</h4>
  <%= f.text_field :name %>
  <span><%= f.label :電話番号 %><%= f.text_field :phonenumber %></span><br>
  <%= f.label :メールアドレス %>
  <%= f.email_field :email %><br>
  <%= f.label :住所 %>
  <%= f.text_area :address %><br>
  <%# <%= f.label :現在のパスワード %>
  <%#<%= f.password_field :password %><br>
  <%#<%= f.label :新しいパスワード %>
  <%#<%= f.password_field :new_password %><br>
  <%#<%= f.label :新しいパスワード確認 %>
  <%#<%= f.password_field :new_password_confirmation %><br>
  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password, class: 'form-control' %>
  <%= f.label :password_confirmation, 'もう一度パスワードを入力してください' %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>
  <%= f.submit "更新" %>
<% end %>