<h1>Users::Orders#index</h1>
<p>Find me in app/views/users/orders/index.html.erb</p>

<div class="row">
  <div class="col-md-10 offset-md-1">
    <div class="page-title">
      <h1>- 予約注文一覧 -</h1>
    </div>
    <table class="table">
      <thead>
          <tr>
            <th>店名</th>
            <th>コース名</th>
            <th>予約日時</th>
            <th>予約状況</th>
            <th></th>
            <th></th>
          </tr>
      </thead>
      <tbody>
        <tr>
          <% @orders.each do|order| %>
          <td><%= order.shop_name %></td>
          <td><%= order.course_name %></td>
          <td><%= order.reserve_date %>【<%= order.reserve_time.strftime('%H:%M') %>〜】</td>
          <!-- <td><%#= order.created_at.strftime("%Y/%m/%d") %></td> -->
          <td><%= order.order_status_i18n %></td>
          <td><%#= (order.billing_amount + order.postage).to_s(:delimited) %></td>
          <td><%= link_to "表示する", users_order_path(order), class: "pull-right", class: "btn btn-warning" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>