<div class="container">
  <div class="row">
      <div class="col-6">
        <h2><strong>マイページ</strong></h2>
        <table class="table table-bordered">
          <tr class="shop-tr">
            <td>ID</td>
            <td>
              <%= @shop.id %>
            </td>
          </tr>
          <tr class="shop-tr">
            <td>店舗名</td>
            <td><%= @shop.name %></td>
          </tr>
          <tr class="shop-tr">
            <td>メールアドレス</td>
            <td><%= @shop.email %></td>
          </tr>
          <tr class="shop-tr">
            <td>郵便番号</td>
            <td><%= @shop.postal_code %></td>
          </tr>
          <tr class="shop-tr">
            <td>住所</td>
            <td><%= @shop.address %></td>
          </tr>
          <tr class="shop-tr">
            <td>電話番号</td>
            <td><%= @shop.phonenumber %></td>
          </tr>
          <tr class="shop-tr">
            <td>店舗ジャンル</td>
            <td><%= @shop.shop_genre_id %></td>
          </tr>
          <tr class="shop-tr">
            <td>開店時間</td>
            <td><%= @shop.open_time %></td>
          </tr>
          <tr class="shop-tr">
            <td>閉店時間</td>
            <td><%= @shop.close_time %></td>
          </tr>
          <tr class="shop-tr">
            <td>ランチ終了時間</td>
            <td><%= @shop.lunch_limit %></td>
          </tr>
          <tr class="shop-tr">
            <td>ディナー終了時間</td>
            <td><%= @shop.dinner_limit %></td>
          </tr>
        </table>
        <%= link_to "編集する", edit_shops_shop_path(@shop.id), class:"btn btn-secondary" %><br><br>
      </div>
        <div class="col-3">
          <%= attachment_image_tag @shop, :shop_image, :fill, 250, 250, format: 'jpeg', fallback: "no_image.shop.jpg", size:"250x250" %>
        </div>
        <div class="col-3"><br><br><br>
          <%= link_to "コース作成", new_shops_course_path %><br><br>
          <%= link_to "コース一覧リンク", shops_courses_path %><br><br>
          <%= link_to "お問い合わせ一覧", shops_inquiries_path %><br><br>
          <%= link_to "メッセージ件数", shops_messages_path %><br><br>
          <%= link_to "お知らせ一覧", shops_inquiries_path %><br><br>
          <%= link_to "予約一覧", shops_orders_path %><br><br>
          <%= link_to "予約件数", shops_orders_path %><br><br>
          <%= link_to "予約一覧実行前", shops_orders_path %><br><br>
          <%= link_to "予約一覧実行済み", shops_orders_path %><br><br>
          <%= link_to "予約キャンセル一覧", shops_orders_path %><br><br>
          <%= link_to "ショップ情報編集", edit_shops_shop_path(@shop.id) %><br><br>
          <%= link_to "レビュー一覧", shops_reviews_path %><br><br>
      </div>
  </div>
</div>