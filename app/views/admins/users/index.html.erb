<div class="container user_container">
    <div class="row user_status">
       <h1 class="status_name1"> 有　効　会　員： </h1>
    </div>
    <div class="row oya">
      <% @users.each do |user| %>
        <% if user.deleted_at.nil? %>
        	<table class="user_table">
          	  <tr>
          	    <th class="popular"><span class="inner"><span class="no1">ユーザー</span>会員情報</span></th>
          	  </tr>
              <tr>
                <td class="popular">ID:<%= user.id %></td>
              </tr>
          	  <tr>
          	    <td class="popular">name：<%= user.name %></td>
          	  </tr>
          	  <tr>
          	    <td>TEL：<%= user.phonenumber %></td>
          	  </tr>
          	  <tr>
          	    <td class="popular"><%= link_to "ステータス変更", admins_user_path(user.id) %></td>
          	  </tr>
        	</table>
        <% end %>
      <% end %>
    </div>

    <div class="row user_status">
       <h1 class="status_name2"> 退　会　済　み： </h1>
    </div>
    <div class="row oya">
        <% @users.each do |user| %>
          <% if user.deleted_at.nil? %>
          <% else %>
            <table class="user_table_false">
                <tr>
                  <th class="popular"><span class="inner"><span class="no1">退会済み</span>会員情報</span></th>
                </tr>
                <tr>
                  <td class="popular">ID:<%= user.id %></td>
                </tr>
                <tr>
                  <td class="popular">name：<%= user.name %></td>
                </tr>
                <tr>
                  <td>TEL：<%= user.phonenumber %></td>
                </tr>
                <tr>
                  <td class="popular"><%= link_to "ステータス変更", admins_user_path(user.id) %></td>
                </tr>
            </table>
          <% end %>
        <% end %>
    </div>
</div>

<div class="row">
    <%= link_to "TOPページ", admins_top_path, class: "btn top_back" %>
</div>

<style>

.top_back{
  padding: 0;
  margin: 10% auto;
  font-family: 'Hannotate TC','Osaka',sans-serif;
  border: 2px solid;
  border-radius: 10px;
}

.top_back:hover{
  color: #000000;
  text-decoration: none;
  }

.user_container{
  font-family: 'Hannotate TC','Osaka',sans-serif;
}

.user_status{
  margin: 1%;
}

.oya{
	display: flex;
	align-items:stretch;
	justify-content:center;
	flex-wrap: wrap;
}

.user_table{
  border-collapse: collapse;
  border-spacing: 0;
  table-layout: fixed;
  width: 15%;
