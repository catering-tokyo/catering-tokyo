<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<h2>GENRE:</h2>
			<div class="genre-body">
				<table class="table">
					<tr>
						<th>GENRE LIST</th>
						<th></th>
						<th></th>
					</tr>
					<% @genres.each do |genre| %>
						<tr>
							<td><%= attachment_image_tag genre, :genre_image, src: "", id:"item_image", size: "210x60", alt:"Image preview", class: "item_prev", fallback: "no_image.jpg" %>
								<%= genre.name %>
							</td>
							<td><%= link_to "EDIT", edit_admins_shop_genre_path(genre.id), class: "edit-btn" %></td>
							<td><%= link_to "DELETE",admins_shop_genre_path(genre), method: :delete, class: "destroy-btn" %></td>
						</tr>
					<% end %>
				</table>

				<%= form_for(@genre, url: admins_shop_genres_path) do |f| %>
					<div class = "row">
						<div class="col-xs-6">
							<div class="field">
								<%= attachment_image_tag @genre, :genre_image, src: "", id:"img_prev", size: "200x200", alt:"Image preview", class: "item_prev", fallback: "no_image.jpg" %>
							</div>
				 			<div class="field">
								<%= f.label :genre_image,"Image select" ,class: "btn btn-warning btn-lg" ,for:"post_img"%>
								<%= f.attachment_field :genre_image, id:"post_img", class: "image", style:"display:none;" %>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="field">
								<%= f.label :name, "GENRE NAME" %>
								<%= f.text_field :name %>
							</div>
							<div class="field">
								<%= f.submit "New Genre", class: "top_list" %>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<%= link_to "トップへ戻る", admins_top_path, class: "top_list" %>
</div>




<style>
.top_list{
  display: block;
  margin: auto;
  padding: 0.8em;
  text-align: center;
  border: 2px solid #fbf284;
  background-color: #1e294c;
  border-radius: 30px;
  transition: .4s;
  font-family:'Impact','Hiragino Kaku Gothic Std',sans-serif;
  font-size: 20px;
  width: 100%;
  color: #fff;
  }

.top_list:hover {
  background: #EC407A;
  color: #fff;
  }
</style>