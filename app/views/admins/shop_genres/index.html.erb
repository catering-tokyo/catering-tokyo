<div class="container">
	<div class="row">
		<h1 class="genre_title"> G E N R E：一覧 </h1>
	</div>
	<div class="row">
		<% @genres.each do |genre| %>
			<div class="back">
			    <div class="button_base b1_roll">
			        <%= link_to edit_admins_shop_genre_path(genre.id) do %>
			            <div>へんしゅう</div>
			            <div><%= genre.name %></div>
			        <% end %>
			    </div>
			</div>
		<% end %>
	</div>
	<div class="row">
		<h1 class="genre_title">G E N R E：追加</h1>
	</div>
	<div class="row">
		<%= form_for(@genre, url: admins_shop_genres_path) do |f| %>
			<div class="cp_iptxt">
				<%= f.text_field :name, class: "ef", type: "text", placeholder: ":Genre追加入力" %>
				<%= f.label :name, "Genre追加入力" %>
				<span class="focus_line"><i></i></span>
			</div>
			<div class="btn-border-gradient-wrap btn-border-gradient-wrap--gold">
				<button type="submit" class="btn btn-border-gradient"><span class="btn-text-gradient--gold">CREATE RIZAP</span></button>
			</div>
		<% end %>
	</div>
	<div class="row">
		<%= link_to "TOPページ", admins_top_path, class: "btn top_back" %>
	</div>
</div>


<style>

.top_back{
  padding: 0;
  margin: 10% auto;
  font-family: 'Hannotate TC','Osaka',sans-serif;
  border: 2px solid;
  border-radius: 10px;
}

.top_back:hover{
  color: #000000;
  text-decoration: none;
  }

.cp_iptxt {
  position: relative;
  width: 300p;
  margin: 10% 3% 3% 0;
}

.cp_iptxt input[type='text'] {
  font: 15px/24px sans-serif;
  box-sizing: border-box;
  width: 100%;
  letter-spacing: 1px;
  padding-left: 4em;
}

.cp_iptxt input[type='text']:focus {
  outline: none;
}

.ef {
  padding: 7px 14px;
  transition: 0.4s;
  border: 1px solid #1b2538;
  background: transparent;
}

.ef ~ .focus_line:before,
.ef ~ .focus_line:after {
  position: absolute;
  top: -1px;
  left: 50%;
  width: 0;
  height: 2px;
  content: '';
  transition: 0.4s;
  background-color: #ffde59;
}

.ef ~ .focus_line:after {
  top: auto;
  bottom: 0;
}

.ef ~ .focus_line i:before,
.ef ~ .focus_line i:after {
  position: absolute;
  top: 50%;
  left: 0;
  width: 2px;
  height: 0;
  content: '';
  transition: 0.6s;
  background-color: #ffde59;
}

.ef ~ .focus_line i:after {
  right: 0;
  left: auto;
}

.ef:focus ~ .focus_line:before,
.ef:focus ~ .focus_line:after,
.cp_iptxt.ef ~ .focus_line:before,
.cp_iptxt.ef ~ .focus_line:after {
  left: 0;
  width: 100%;
  transition: 0.4s;
}

.ef:focus ~ .focus_line i:before,
.ef:focus ~ .focus_line i:after,
.cp_iptxt.ef ~ .focus_line i:before,
.cp_iptxt.ef ~ .focus_line i:after {
  top: -1px;
  height: 100%;
  transition: 0.6s;
}

.ef ~ label {
  position: absolute;
  z-index: -1;
  top: 10px;
  left: 14px;
  width: 100%;
  transition: 0.3s;
  letter-spacing: 0.5px;
  color: #ffffff;
}

.ef:focus ~ label,
.cp_iptxt.ef ~ label {
  font-size: 12px;
  top: -18px;
  left: 0;
  transition: 0.3s;
  color: #ff914d;
}

.btn-border-gradient-wrap {
  display: inline-block;
  padding: 0.2rem;
  border-radius: 0.5rem;
}

.btn-border-gradient-wrap--gold {
  background-image: -webkit-linear-gradient(
    315deg,
    #704308 0%,
    #ffce08 37%,
    #fefeb2 47%,
    #fafad6 50%,
    #fefeb2 53%,
    #e1ce08 63%,
    #704308 100%
  );
  background-image: linear-gradient(
    135deg,
    #704308 0%,
    #ffce08 37%,
    #fefeb2 47%,
    #fafad6 50%,
    #fefeb2 53%,
    #e1ce08 63%,
    #704308 100%
  );
}

.btn-border-gradient {
  font-size: 2rem;
  background: #000;
}

.btn-text-gradient--gold {
  font-family: "ヒラギノ明朝 Pro W3", "Hiragino Mincho Pro",
    "Hiragino Mincho ProN", "HGS明朝E", "ＭＳ Ｐ明朝", serif;
  background: -webkit-gradient(
    linear,
    left bottom,
    left top,
    from(#ffffdb),
  );
  background: -webkit-linear-gradient(bottom, #ffffdb, #a16422);
  background: linear-gradient(to top, #ffffdb, #a16422);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.genre_title {
    position: relative;
    padding-bottom: 0.5em;
}

.genre_title::after {
     position: absolute;
     content: '';
     left: 0;
     bottom: 0;
     width: 100%;
     height: 7px;
     box-sizing: border-box;
     border-top: 3px solid black;
     border-bottom: 1px solid black;
}

.back {
    width: 20%;
    height: 100px;
    float: left;
    border: 10px;
    border-color: #ffffff;
    border-style: solid;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    counter-increment: bc;
    padding: 0px 5px 5px 5px;
    margin: auto;
}

.button_base {
    margin: 0;
    border: 0;
    font-size: 18px;
    position: relative;
    top: 50%;
    left: 50%;
    margin-top: -25px;
    margin-left: -100px;
    width: 100%;
    height: 50px;
    text-align: center;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-user-select: none;
    cursor: default;
}

.button_base:hover {
    cursor: pointer;
}

/* ### ### ### 05 */
.b1_roll {
    perspective: 500px;
    -webkit-perspective: 500px;
    -moz-perspective: 500px;
}

.b1_roll div {
    position: absolute;
    text-align: center;
    width: 100%;
    height: 50px;
    padding: 10px;
    border: #000000 solid 1px;
    /*pointer-events: none;*/
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
}

.b1_roll div:nth-child(1) {
    color: #000000;
    background-color: #ffffff;
    transform: rotateX(90deg);
    -webkit-transform: rotateX(90deg);
    -moz-transform: rotateX(90deg);
    transition: all 0.2s ease;
    -webkit-transition: all 0.2s ease;
    -moz-transition: all 0.2s ease;
    transform-origin: 50% 50% -25px;
    -webkit-transform-origin: 50% 50% -25px;
    -moz-transform-origin: 50% 50% -25px;
    font-family: 'Hannotate TC','Osaka',sans-serif;
    border-radius: 3px;
}

.b1_roll div:nth-child(2) {
    color: #000000;
    background-color: #ffb386;
    transform: rotateX(0deg);
    -webkit-transform: rotateX(0deg);
    -moz-transform: rotateX(0deg);
    transition: all 0.2s ease;
    -webkit-transition: all 0.2s ease;
    -moz-transition: all 0.2s ease;
    transform-origin: 50% 50% -25px;
    -webkit-transform-origin: 50% 50% -25px;
    -moz-transform-origin: 50% 50% -25px;
    font-family: 'Hannotate TC','Osaka',sans-serif;
    border-radius: 3px;
}

.b1_roll:hover div:nth-child(1) {
    color: #000000;
    transition: all 0.2s ease;
    -webkit-transition: all 0.2s ease;
    -moz-transition: all 0.2s ease;
    transform: rotateX(0deg);
    -webkit-transform: rotateX(0deg);
    -moz-transform: rotateX(0deg);
}

.b1_roll:hover div:nth-child(2) {
    background-color: #000000;
    transition: all 0.2s ease;
    -webkit-transition: all 0.2s ease;
    -moz-transition: all 0.2s ease;
    transform: rotateX(-90deg);
    -webkit-transform: rotateX(-90deg);
    -moz-transform: rotateX(-90deg);
}

</style>